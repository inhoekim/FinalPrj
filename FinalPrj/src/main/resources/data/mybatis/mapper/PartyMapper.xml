<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mybatis.mapper.PartyMapper">
	<insert id="createParty" parameterType="com.spring.ott.vo.PartyVo">
		insert into party values
		(SEQ_PARTY.nextval,#{ott_id},#{leader},#{member_num},
		#{invite_code},0,#{share_id},#{share_pwd},sysdate+30,sysdate)
	</insert>
	
	<select id="getMyParty" parameterType="int" resultType="com.spring.ott.vo.PartyVo">
		select * from party 
		where ott_id = #{ott_id} and party_state = 0 and rownum = 1
		order by start_date
	</select>
</mapper>