<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mybatis.mapper.CommentsMapper">
	<select id="selectAll" resultType="com.spring.ott.vo.CommentsVo" parameterType="int">
		select * from comments where post_id=#{post_id}
	</select>
	<select id="getNum" resultType="int">
		select NVL(max(comment_id),0) mnum from comments
	</select>
	<update id="addStep" parameterType="hashmap">
		update comments set step=step+1 where ref=#{ref} and step>#{step}
	</update>
	<insert id="insertComment" parameterType="com.spring.ott.vo.CommentsVo">
		insert into comments values(#{comment_id},#{post_id},#{user_id},#{content},#{ref},0,0,sysdate,null)
	</insert>
	<insert id="insertReComment" parameterType="com.spring.ott.vo.CommentsVo">
		insert into comments values(#{comment_id},#{post_id},#{user_id},#{content},#{ref},0,#{step},sysdate,null)
	</insert>
	<update id="reCheck" parameterType="int">
		update comments set ref=#{ref} where comments_id !=ref
	</update>
	<select id="getCount" resultType="int" parameterType="int">
		select NVL(count(comments_id),0) cnt from comments where post_id=#{post_id}
	</select>
	<select id="selectComm" resultType="com.spring.ott.vo.CommentsVo">
		select * from comments comment_id=#{comment_id}
	</select>
</mapper>